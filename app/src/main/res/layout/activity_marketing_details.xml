<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".MarketingDetails">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/myimage1"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="150dp"
        android:background="@android:color/darker_gray"
        android:src="@drawable/placeholder"
        android:clickable="true"
        app:civ_border_color="#3f51b5"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="10dp"
        app:civ_shadow_color="#3f51b5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product type"
        app:layout_constraintTop_toBottomOf="@+id/myimage1"
        android:id="@+id/ptype"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product quantity"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/ptype"
        android:id="@+id/pquantity"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product total price"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/pquantity"
        android:id="@+id/pprice"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Product discount"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/pprice"
        android:id="@+id/pdiscount"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location X coordinate "
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/pdiscount"
        android:id="@+id/pXcoordinate"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter location Y coordinate"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/pXcoordinate"
        android:id="@+id/pYcoordinate"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ubtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pYcoordinate"
        android:text="DONE"/>



</androidx.constraintlayout.widget.ConstraintLayout>